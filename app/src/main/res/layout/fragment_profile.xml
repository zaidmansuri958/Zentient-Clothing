<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.profile.ProfileFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:backgroundTint="@color/back_black"
        app:cardCornerRadius="15dp"
        app:cardElevation="25dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:orientation="vertical">


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/aldrich"
                    android:hint="name"
                    android:textColorHint="@color/white"
                    app:boxStrokeColor="#C6FF00">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:editable="false"
                        android:focusedByDefault="true"
                        android:fontFamily="@font/aldrich"
                        android:text="name"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/aldrich"
                    android:hint="number"
                    android:textColorHint="@color/white"
                    app:boxStrokeColor="#C6FF00">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:editable="false"
                        android:focusedByDefault="true"
                        android:fontFamily="@font/aldrich"
                        android:text="7201805489"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:clickable="false"
                    android:focusedByDefault="true"
                    android:fontFamily="@font/aldrich"
                    android:hint="email"
                    android:textColorHint="@color/white"
                    app:boxStrokeColor="#C6FF00">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:editable="false"
                        android:focusedByDefault="true"
                        android:fontFamily="@font/aldrich"
                        android:text="zaid@gmail.com"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/aldrich"
                    android:hint="address"
                    android:textColorHint="@color/white"
                    app:boxStrokeColor="#C6FF00">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:editable="false"
                        android:focusedByDefault="true"
                        android:fontFamily="@font/aldrich"
                        android:text="Ahmedabad"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/aldrich"
                    android:hint="city"
                    android:textColorHint="@color/white"
                    app:boxStrokeColor="#C6FF00">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:editable="false"
                        android:focusedByDefault="true"
                        android:fontFamily="@font/aldrich"
                        android:text="ahmedabad"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:fontFamily="@font/aldrich"
                    android:padding="10dp"
                    android:text="LOGOUT"
                    android:textColor="@color/back_black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:cornerRadius="10dp"
                    app:elevation="25dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/liked_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:backgroundTint="#FF1744"
                    android:fontFamily="@font/aldrich"
                    android:padding="10dp"
                    android:text="Like items"
                    android:textColor="@color/background_color"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:cornerRadius="10dp"
                    app:elevation="25dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>